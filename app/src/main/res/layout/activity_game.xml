<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Фрагмент с игровым полем -->
    <FrameLayout
        android:id="@+id/fragment_container_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"/>

    <!-- Фрагмент со статистикой (ходы, время) -->
    <FrameLayout
        android:id="@+id/fragment_container_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_container_grid"
        android:layout_marginTop="16dp"/>

    <!-- Фрагмент с кнопками управления -->
    <FrameLayout
        android:id="@+id/fragment_container_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"/>
</RelativeLayout>